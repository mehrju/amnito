    function payForOrder(orderId) {
        if (orderId) {
            $.ajax({
                beforeSend: function () {
                    asanPardakht.application.showLoading();
                },
                complete: function () {
                    asanPardakht.application.hideLoading();
                },
                type: "POST",
                data: { "orderId": orderId },
                url: "/SaleCartonwrapper/getPaymentRequest",
                success: function (data) {
                    var paymentRequest = JSON.parse(data.paymentRequest);
                    if (!paymentRequest) {
                        asanPardakht.application.showMessageBox('عدم امکان پرداخت', 'درحال حاضر امکان پرداخت وجود ندارد با پشتیبانی تماس بگیرید', 3);
                        return false;
                    }
                    asanPardakht.application.startPayment(paymentRequest, paymentCompletedEventHandler);
                }
            });

        }
        else
            asanPardakht.application.showMessageBox('پرداخت سفارش', 'سفارش مورد نظر جهت پرداخت نامعتبر می باشد', 1);
    }
     function paymentCompletedEventHandler(payment)
        {
            try {
                asanPardakht.application.hideLoading();
                $.ajax({
                    beforeSend: function () {
                        asanPardakht.application.showLoading();
                    },
                    complete: function () {
                        asanPardakht.application.hideLoading();
                    },
                    type: "POST",
                    url: '@Url.Action("ProccessPaymentResult", "Ap_NewCheckout")',
                    data: payment,
                    success: function (_result) {
                        if (_result.message)
                            asanPardakht.application.showMessageBox('نتیجه پرداخت',_result.message, 1);
                        if (_result.result == true) {
                            window.location = '@(Url.RouteUrl("ApCheckoutCompleted"))' + '?orderId=' + _result.orderId;
                        }
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        asanPardakht.application.showMessageBox('خطا', 'کاربر گرامی در زمان ثبت انصراف از سفارش شما اشکالی به وجود آمده، لطفا ارتباط اینترنتی دستگاه خود را بررسی کنید', 4);
                    }
                });
            }
            catch (err) {
                asanPardakht.application.showMessageBox('خطا در زمان پرداخت', err.message, 3);
                alert(err.message);
            }
        }
    function openPdf(orderId) {
        debugger;
        var landingurl = 'https://www.postex.ir/%D8%A7%D9%85%D9%88%D8%B2%D8%B4-%D9%86%D8%AD%D9%88%D9%87-%D8%AF%D8%A7%D9%86%D9%84%D9%88%D8%AF-%D9%81%D8%A7%DA%A9%D8%AA%D9%88%D8%B1-%D8%AF%D8%B1-%D8%A2%D9%BE'
        landingurl += '?Ap=true&orderId=' + orderId;
        asanPardakht.application.openExternalUrl(landingurl);//"https://postex.ir/ShipitoHome/GetPDF/" + orderId);
    }
    function CancelOrder(orderid, categoryId, orderStatusId) {

        if (orderStatusId == 40) {
            asanPardakht.application.showMessageBox('کنسل کردن سفارش', 'سفارش مورد نظر شما قبلا کنسل شده', 1);
            return;
        }
        var postItems = [654, 655, 660, 661, 662, 677, 698, 697, 696, 695, 694, 693, 691, 690, 659, 660, 661, 662];
        if (orderStatusId != 10) {
            if (postItems.find(function (serviceId) { return serviceId == categoryId })) {
                asanPardakht.application.showConfirmBox('انصراف از سفارش', 'سفارش مورد نظر مربوط به پست بار می باشد در صورت کنسلی مبلغ هزینه پستی عودت داده نمی شود!', 'بله، می پذیرم', 'خیر', function () {
                    _cancelOrder(orderid);
                }, function () { });
            }
            else {
                _cancelOrder(orderid);
            }
        } else {
            _cancelOrder(orderid);
        }
    }
    function _cancelOrder(orderId) {
        $.ajax({
            beforeSend: function () {
                asanPardakht.application.showLoading();
            },
            complete: function () {
                asanPardakht.application.hideLoading();
            },
            type: "POST",
            data: { "orderId": orderId},
            url: "/ApDashboard/cancelOrder",
            success: function (data) {
                asanPardakht.application.showMessageBox('نتیجه انصراف از سفارش', data.message, 1);
                asanPardakht.application.showLoading();
                window.location.reload();
            }
        });
    }
