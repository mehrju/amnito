            Color = "#4D4D4F";
            break;
        case 20:
            Color = "#2d89cc";
            break;
        case 30:
            Color = "#379B36";
            break;
        case 40:
            Color = "#F2432E";
            break;
    }
    switch (item.PaymentStatusId)
    {
        case 10:
            payColor = "#4D4D4F";
            break;
        case 20:
            payColor = "#2d89cc";
            break;
        case 30:
            payColor = "#379B36";
            break;
        case 40:
            payColor = "#F2432E";
            break;
    }

    <div class="orderItem">
