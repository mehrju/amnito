@model Nop.Plugin.Misc.Ticket.Domain.Tbl_FAQ


<div class="panel-group">

    <div class="panel panel-default">
        <div class="panel-body">
            
            <div class="col-md-6">
                <div class="form-group">
                    <div class="col-md-4">
                        <nop-label asp-for="IdCategory" />
                    </div>
                    <div class="col-md-8">
                        <nop-select asp-for="IdCategory" asp-items="Model.ListCategory" />

                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Question" />
                    </div>
                    <div class="col-md-9">
                        <nop-textarea asp-for="Question" />
                        <span asp-validation-for="Question"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Answer" />
                    </div>
                    <div class="col-md-9">
                        <nop-textarea asp-for="Answer" />
                        <span asp-validation-for="Answer"></span>
                    </div>
                </div>
            </div>
             
           
        </div>
    </div>

</div>