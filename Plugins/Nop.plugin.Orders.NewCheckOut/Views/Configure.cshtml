@model Nop.plugin.Orders.NewCheckOut.Models.OrderDivisionModel
@{
    Layout = "_ConfigurePlugin";
}
@using Nop.Core.Domain.Media
@using Nop.Services.Media

<form id="frm_OrderDivisionConfig" asp-controller="OrderDivisionConfig" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="BaseDallerPrice" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="BaseDallerPrice" />
                        <span asp-validation-for="BaseDallerPrice"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="BaseGoldPriceInGram" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="BaseGoldPriceInGram" />
                        <span asp-validation-for="BaseGoldPriceInGram"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="RoleId" />
                    </div>
                    <div class="col-md-3">
                        <nop-select asp-for="RoleId" asp-items="Model.RoleList" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                    </div>
                </div>

            </div>
        </div>
    </div>

</form>

