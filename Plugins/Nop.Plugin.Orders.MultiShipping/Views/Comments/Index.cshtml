@{
    Layout = "~/Plugins/Orders.MultiShipping/Views/Shared/PostexNew/_PubllicNewUiLayout.cshtml";
}


<i class="fa fa-spinner fa-spin" id="LoadingGift" style="font-size:48px;color:#ffa318;position:fixed;top:50%;left:50%;z-index:999999999999999;display:none"></i>

<div class="container">


    @*<div class="shadowDesk">
            <img class="rounded mx-auto d-block mt-2 imgTitleLogo" src="images/loginIcon.png" />
        </div>*@
    <h4 class="mt-3 titlePage d-none">ثبت نظرات</h4>


    <div class="mt-3">
        <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-12 m-auto">
            <!--single form panel-->
            <form id="commentForm" class="shadow mt-3 p-4 bg-white">
                <h3 style="text-align: center;">ثبت نظر</h3>

                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-2 col-sm-2"></div>
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-8">
                        <div class="input-group mb-3 mt-4" style="direction: ltr; ">
                            @*<div class="input-group-prepend">
                                    <button class="btn btn-outline-secondary" type="button"
                                            style="background-color: #fff !important; border: 1px solid #000;">
                                        <img class="searchIcon" src="/Themes/postexNew/images/searchIcon.png" />
                                    </button>
                                </div>*@
                            <input type="number" persianName="کد رهگیری" required id="TrackingCode" class="form-control search-input rahgiri p-4" placeholder="کد رهگیری مرسوله پستی"
                                   aria-label="Recipient's username" aria-describedby="basic-addon2"
                                   style="text-align: right; border-bottom-left-radius: 0 !important;border-top-left-radius: 0 !important;">
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-md-2 col-sm-2"></div>
                </div>

                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-2 col-sm-2"></div>
                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-8">
                        <div class="form-group">
                            <textarea persianName="توضیحات" required class="form-control search-input" id="Description" placeholder="توضیحات ..." rows="3"></textarea>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-md-2 col-sm-2"></div>
                </div>

                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-2 col-sm-2"></div>


                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-8">

                        <div class="row">
                            <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12">

                                <div class="search-input p-1 mb-2">

                                    <div class="row">

                                        <div class="">
                                            <p style="color: #000">ثبت امتیاز:</p>
                                        </div>

                                        <div class="col-xl-8 col-lg-8 col-md-6 col-sm-6 col-6 d-flex justify-content-end">
                                            <span class="rating">
                                                <input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1" />
                                                <label for="rating-input-1-5" class="rating-star"></label>
                                                <input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1" />
                                                <label for="rating-input-1-4" class="rating-star"></label>
                                                <input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1" />
                                                <label for="rating-input-1-3" class="rating-star"></label>
                                                <input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1" />
                                                <label for="rating-input-1-2" class="rating-star"></label>
                                                <input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1" />
                                                <label for="rating-input-1-1" class="rating-star"></label>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                           
                            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12">
                                <button id="submitBTN" class="button btn js-btn-next btn-block pt-1 pb-1 mt-0" type="button" title="Next">
                                    <span></span>ثبت نظر
                                </button>
                            </div>
                        </div>


                    </div>

                    <div class="col-xl-3 col-lg-3 col-md-2 col-sm-2"></div>
                </div>

                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-2 col-sm-2"></div>

                    <div class="col-xl-6 col-lg-6 col-md-8 col-sm-8">
                        <a class="button btn js-btn-next btn-block ml-3" href="/comments/list">
                            <span></span>مشاهده سایر
                            نظرات
                        </a>
                    </div>
                    @*<div class="col-xl-6 col-lg-6 col-md-8 col-sm-8">
                        <button class="button btn js-btn-next btn-block ml-3" type="button" title="Next">
                            <span></span>مشاهده سایر
                            نظرات
                        </button>
                    </div>*@
                    <div class="col-xl-3 col-lg-3 col-md-2 col-sm-2"></div>

                </div>


            </form>

        </div>
    </div>

</div>

<script>
    $(function () {
        initForm("commentForm");
        $('#submitBTN').click(function () {
            var data = postexForm("commentForm");
            if (!data.isok) {
                alert(data.AllValidationMessage);
                return;
            }
            var formData = data.Values;
            if ($('#rating-input-1-5').prop('checked')) {
                formData.Rate = 5;
            }
            else if ($('#rating-input-1-4').prop('checked')) {
                formData.Rate = 4;
            }
            else if ($('#rating-input-1-3').prop('checked')) {
                formData.Rate = 3;
            }
            else if ($('#rating-input-1-2').prop('checked')) {
                formData.Rate = 2;
            }
            else if ($('#rating-input-1-1').prop('checked')) {
                formData.Rate = 1;
            }
            $('#LoadingGift').show();

            $('#submitBTN').prop('disabled', 'disabled');

            $.ajax({
                cache: true,
                type: "POST",
                url: "/Comments/Post",
                data: formData,
                //contentType: "application/json",
                success: function (data) {
                    $('#LoadingGift').hide();
                    $('#submitBTN').prop('disabled', '');
                    if (data) {
                        alert(data);
                        return;
                    }
                    alert('نظر شما با موفقیت ثبت شد');
                    location.reload();
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    console.log('Failed to retrieve .');
                    $('#LoadingGift').hide();
                    $('#submitBTN').prop('disabled', '');
                }
            });
        });

    });
</script>
<script type="text/javascript" src="~/Plugins/Orders.MultiShipping/Scripts/postexUtility.js"></script>

