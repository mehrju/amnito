<script>
    $(document).ready(function () {

        $('.dot').hide();
        $('.flickity-prev-next-button').hide();
        $('.gallery-cell').each(function () {

        });
        $('.flickity-viewport').css('height', '90px');
        $('.innerCircul').click(function () {
            if ($(this).find('a').length == 0)
                return;
            if ($(this).find('a').attr('href') == '#')
                return;
            window.location.href = $(this).find('a').attr('href');
        });
        $('#carouselExampleControls').carousel();
        $('#_carouselExampleControls').carousel({ interval: 8000 });
        $('#MainCarousel').carousel({ interval: 10000 });

        $('.ServiceLink').click(function () {
            debugger;
            var item = parseInt($(this).attr('data-val'));
            var url = '';
            if (item == 0) {//post
                url = '/%D9%BE%D8%B3%D8%AA-%D8%A8%D8%A7%D8%B1-2'
            }
            else if (item == 1) {// تعارف
                url = '/%D9%BE%D8%B3%D8%AA%DA%A9%D8%B3'
            }
            else if (item == 2) {//چاپار
                url = '/%DA%A9%D8%A7%D9%84%D8%A7-%D8%B1%D8%B3%D8%A7%D9%86%D8%A7%D9%86-%DA%86%D8%A7%D9%BE%D8%A7%D8%B1'
            }
            else if (item == 3) {//PDE
                url = '/pde'
            }
            else if (item == 4) {//blue sky
                url = '/%D8%B1%D8%A7%D9%87-%D8%A2%D8%A8%DB%8C-%D8%A2%D8%B3%D9%85%D8%A7%D9%86'
            }
            else if (item == 5) {//DTS
                url = '/dts'
            }
            else if (item == 6) {//TPG
                url = '/tpg'
            }
            else if (item == 7) {//یارباکس
                url = '/%DB%8C%D8%A7%D8%B1%D8%A8%D8%A7%DA%A9%D8%B3'
            }
            else if (item == 8) {//پرشیا
                url = ''
            }
            else if (item == 9) {//اسنپ
                url = '/%D8%A7%D8%B3%D9%86%D9%BE'
            }
            else if (item == 10) {//اوبار
                url = '/%D8%A7%D9%88%D8%A8%D8%A7%D8%B1'
            }
            else if (item == 12) {
                $('#showHelp').click();
            }
            else if (item == 11) {
                $('#_RuleModal').appendTo("body");
                $('#_RuleModal').modal('show', { backdrop: 'static' });
            }
            if (url != '') {
                url += '?Sep=true'
                window.location.href = url;
            }
        });


        $('.carousel .carousel-inner').on('dragstart', 'a', function () {
            return false;
        });




        $('body').addClass('blocker-modal');
    });

</script>
