@inject Nop.Services.Orders.IRewardPointService _rewardPointService;
@inject Nop.Core.IStoreContext _storeContext;
@inject Nop.Core.IWorkContext _workContext;
@{
    Layout = "~/Plugins/Orders.MultiShipping/Views/Shared/Postbar/_PubllicNewUiLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-2"></div>

        <div class="col-xs-12 col-sm-6 col-md-8">
